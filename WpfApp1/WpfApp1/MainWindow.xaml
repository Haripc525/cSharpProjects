<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="New Button"   Background="Red" Foreground="Black" HorizontalAlignment="Left" Margin="317,187,0,0" VerticalAlignment="Top" Width="108" RenderTransformOrigin="2.28,0.69" Height="47" Click="Button_Click" ClipToBounds="True" SnapsToDevicePixels="True" BorderThickness="0">
            <Button.Effect>
                <DropShadowEffect BlurRadius="{DynamicResource {x:Static SystemParameters.IconWidthKey}}" Color="#FF4E61CE" RenderingBias="Quality"/>
               
            </Button.Effect>
            <Button.OpacityMask>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF5DBD1E" Offset="1"/>
                    
                </RadialGradientBrush>
            </Button.OpacityMask>
        </Button>

    </Grid>
</Window>
